<h1>Messages</h1>

<table class="table mt-5">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Org name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Received at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.first_name %></td>
        <td><%= message.last_name %></td>
        <td><%= message.org_name %></td>
        <td><%= message.email %></td>
        <td><%= message.phone %></td>
        <td><%= message.created_at.strftime("%l:%M%p on %b %e, %Y") %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
